class Solution {
public:
    int pivotIndex(vector<int>& nums) {
        double sumNums = accumulate(nums.begin(), nums.end(), 0);
        double sumPre = 0;
        for (int i = 0; i < nums.size(); ++i) {
            if ((sumNums - nums[i]) / 2 == sumPre) {
                return i;
            }
            sumPre += nums[i];
        }
        return -1;
    }
};
